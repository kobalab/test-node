style.
  form {
    width: 320px;
    margin: 50px auto;      
  }
  form.local {
    text-align: right;
    font-size: 18px;
    padding: 10px;
    border-radius: 10px;
    border: solid 1px #069;
  }
  form div {
    margin: 4px auto;
  }
  form input {
    font-size: 100%;
    width: 200px;
  }
  form input[type="submit"] {
    width: auto;
    border-style: none;
    padding: 4px 2em;
    border-radius: 4px;
    color: white;
    background: #069;
    cursor: pointer;
    padding: 0.3em 2em;
    border-radius: 0.4em;
  }
  form.twitter {
    font-size: 24px;
    text-align: center;
  }
